{
    'version': 1,
    'disable_existing_loggers': False,
    'formatters': {
        'internal': {
            'format': '[ %(levelname)7s ] .-=iNTERNAL=-. %(asctime)s %(name)s %(filename)12s:%(lineno)-4d %(message)s'
        },
    },
    'handlers': {
        'console': {
            'class': 'logging.StreamHandler',
            'formatter': 'internal',
            'level': 'DEBUG'
        },
        'exception_handler': {
            'class': 'logging.FileHandler',
            'formatter': 'internal',
            'filename': 'slate_exceptions.log',
            'level': 'ERROR'
        },
    },
    'loggers': {    
        '': {
            'handlers': ['console', 'exception_handler'],
            'level': 'WARNING',
            'propagate': False,
        },
        'slate.slate': {
            'handlers': ['console', 'exception_handler'],
            'level': 'WARNING',
            'propagate': False,
        }
    }
}